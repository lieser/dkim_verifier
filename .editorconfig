root = true

[*]
indent_style = tab
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = set
insert_final_newline = true

[*.d.ts]
indent_style = space

[*.html]
indent_style = space
indent_size = 2

[*.md]
indent_style = space
indent_size = 2

[*.svg]
indent_style = space
indent_size = 2

[*.yml]
indent_style = space
indent_size = 2

[{.vscode/cSpell.json,.vscode/cspell.json}]
indent_style = space

[.vscode/settings.json]
indent_style = space

[.eslintrc.json]
indent_style = space

[jsconfig.json]
indent_style = space

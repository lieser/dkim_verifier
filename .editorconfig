root = true

[*]
indent_style = tab
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = unset
insert_final_newline = true

[*.d.ts]
indent_style = space

[*.xml]
indent_style = space
indent_size = 2

[chrome\content\options.xul]
indent_style = space
indent_size = 2
trim_trailing_whitespace = set

[*.md]
indent_style = space

[.vscode/cSpell.json]
indent_style = space

[.vscode/settings.json]
indent_style = space
